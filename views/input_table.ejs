<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Hello, Write world!</title>
  </head>
  <body>
    <%- include('nav.html') %>
    
    <h3>오늘의 운동량</h3>

    <div class="container mt-3">
        <form action="/train" method="POST">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th class="text-center">푸시엎</th>
                <th class="text-center">배운동</th>
                <th class="text-center">벽스퀏</th>
                <th class="text-center">팔운동</th>
                <th class="text-center">상체들기</th>
                <th class="text-center">뒷꿈치들기</th>
                <th class="text-center">의자발차기</th>
                <th class="text-center">무릎벌리기</th>
            </tr>
            </thead>
            <tbody>
              <tr>
                <td><input type="int" class="form-control" name="pushup"></td>
                <td><input type="int" class="form-control" name="stomach"></td>
                <td><input type="int" class="form-control" name="squat"></td>
                <td><input type="int" class="form-control" name="arm"></td>
                <td><input type="int" class="form-control" name="uplift"></td>
                <td><input type="int" class="form-control" name="upheel"></td>
                <td><input type="int" class="form-control" name="kick_on_chair"></td>
                <td><input type="int" class="form-control" name="spreading_thigh"></td>
              </tr>
            </tbody>
          </table>
          <button type="submit" class="btn btn-danger">제출</button>
        </form>
      </div>
      
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
